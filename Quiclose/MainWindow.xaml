<Window x:Class="Quiclose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:Quiclose"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=False}"
        Title="Quiclose"
        Height="140"
        Width="500"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Deactivated="Window_Deactivated"
        Icon="/Quiclose;component/shell32-090.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Application Name: (does not save between launches)"/>
        <TextBox Grid.Row="1" MaxLines="1" Margin="10,0" Text="{Binding TargetName}"/>
        <Grid Grid.Row="2" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="_check"
                   Source="{Binding TargetStatus, Mode=OneWay}" 
                   Grid.Column="1" 
                   Margin="0,10" 
                   Visibility="Hidden"/>
            <Button Grid.Column="2" Content="Check for app" Margin="10" Padding="10,0" Click="OnCheckClick"/>

        </Grid>

        <tb:TaskbarIcon
            x:Name="_taskbar"
            IconSource="/Quiclose;component/shell32-090.png"
            TrayMouseDoubleClick="TrayDoubleClick"
            ToolTipText="Quiclose">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" Click="TrayOpen"/>
                    <MenuItem Header="Quit" Click="TrayQuit"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
